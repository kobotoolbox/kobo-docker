# Redis configuration for Enketo's main database instance

supervised no

daemonize no

pidfile /var/run/redis/redis-enketo-main.pid

port 6379

bind 127.0.0.1 ${CONTAINER_IP}

timeout 0

tcp-keepalive 0

loglevel notice

logfile /var/log/redis/redis-enketo-main.log

databases 16

save 300 1

stop-writes-on-bgsave-error yes

rdbcompression yes

rdbchecksum yes

dbfilename enketo-main.rdb

dir /data/

slave-serve-stale-data yes
slave-read-only yes
repl-disable-tcp-nodelay no
slave-priority 100

appendonly no

lua-time-limit 5000

slowlog-log-slower-than 10000

slowlog-max-len 128

notify-keyspace-events ""

hash-max-ziplist-entries 512
hash-max-ziplist-value 64
list-max-ziplist-entries 512
list-max-ziplist-value 64
set-max-intset-entries 512
zset-max-ziplist-entries 128
zset-max-ziplist-value 64
activerehashing yes
client-output-buffer-limit normal 0 0 0
client-output-buffer-limit slave 256mb 64mb 60
client-output-buffer-limit pubsub 32mb 8mb 60
hz 10
aof-rewrite-incremental-fsync yes

requirepass "${REDIS_PASSWORD}"

#include /etc/redis/conf.d/local.conf
